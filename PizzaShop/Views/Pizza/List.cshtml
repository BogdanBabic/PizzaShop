<table class="table my-3">
    <tr>
        <td>
            <div class="card bg-white text-black text-center p-3" style="max-height: fit-content">
                <blockquote class="blockquote mb-0">
                    <p>Sve pice su od prirodnih sastojaka</p>
                    <footer class="blockquote-footer">
                        <small>
                            <cite title="Source Title">Andreja</cite>
                        </small>
                    </footer>
                </blockquote>
            </div>
        </td>

        @{
            var pizzaList = Model as IEnumerable<Pizza>;
            if (pizzaList != null)
            {
                var pizzas = pizzaList.ToList();
                for (int i = 0; i < pizzas.Count; i++)
                {
                    <td class="col-4">
                        <div class="card">
                            <img class="card-img-top" src="@Url.Content(pizzas[i].ImageThumbnailUrl)" alt="@pizzas[i].Name" style="height:200px">
                            <div class="card-body">
                                <h4 class="card-title">
                                    @pizzas[i].Name
                                </h4>
                                <p class="card-text">
                                    @pizzas[i].ShortDescription
                                </p>
                                <a href="Details/@pizzas[i].ID"><button type="button" class="btn btn-primary">Pogledaj detalje</button></a>
                            </div>
                        </div>
                    </td>
                }
                if (pizzas.Count % 3 != 0)
                {
                    var remainingCells = 3 - (pizzas.Count % 3);
                    for (int i = 0; i < remainingCells; i++)
                    {
                        <td></td>
                    }
                }
            }
        }

        <td>
            <div class="card bg-white text-black text-end p-3" style="max-height: fit-content">
                <blockquote class="blockquote mb-0">
                    <p>Ovo MORATE probati.Fantastično je.<br />Verujte mi.</p>
                    <footer class="blockquote-footer">
                        <small>
                            <cite title="Source Title">Nemanja Mosorinski u Stvar Ukusa</cite>
                        </small>
                    </footer>
                </blockquote>
            </div>
        </td>
    </tr>
</table>


