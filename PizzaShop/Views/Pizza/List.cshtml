@model IEnumerable<Pizza>

    <body>
        <div>
        @foreach(var p in Model)
        {
            <h2>
                <a href="#">
                    @p.Name
                </a>
            </h2>
        }
        </div>
    </body>

<div class="container">
    <p style="text-decoration-color: red">@ViewBag.ErrorMessage</p>

    <form action="@Url.Action("List")" method="get">
        <input type="text" name="categoryID" placeholder="Category ID" />
        <input type="submit" value="Filter" />
    </form>

    <h2 style="text-align: center">
        Sve pite u ponudi
    </h2>

    <div class="row">
        <table border="1">
            @foreach (var pie in Model)
            {
                <div class="col-xl-4 mb-5">
                    <div class="card">
                        <img class="card-img-top" src="@pie.ImageUrl" alt="Slika pizze">
                        <div class="card-body">
                            <h4 class="card-title">
                                @pie.Name
                            </h4>
                            <p class="card-text">
                                @pie.ID
                            </p>
                            <p class="card-text">
                                @pie.ShortDescription
                            </p>
                            <p class="card-text">
                                @pie.Price
                            </p>
                            <p class="card-text">
                                @if (pie.IsPizzaOfTheWeek == true)
                                {
                                    <span>
                                        <b>
                                            Pizza Nedelje!!!
                                        </b>                                    
                                    </span>
                                }
                            </p>
                            <p class="card-text">
                                @if (pie.InStock == false)
                                {
                                    <span>
                                        <strong>
                                            Nema na stanju!!!
                                        </strong>
                                    </span>
                                }
                            </p>
                            <p class="card-text">
                                @switch (pie.Category.CategoryId)
                                {
                                    case 1:
                                        <span>
                                            Pizza sa mesom
                                        </span>
                                        break;
                                    case 2:
                                        <span>
                                            Veganska pizza
                                        </span>
                                        break;
                                    case 3:
                                        <span>
                                            Pizza bez glutena
                                        </span>
                                        break;
                                    default:
                                        break;
                                        //Znam da je moglo i sa if, ali sam hteo da iskoristim switch jer mi je delovalo izazovnije i lepse
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </table>
    </div>
</div>