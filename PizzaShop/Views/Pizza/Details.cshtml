@model Pizza

<div>
    <div class="row">
        <div class="col-md-12 mt-5 mb-5">
            <h2>@Model.Name <i style="font-weight:400">@Model.ShortDescription</i></h2>
        </div>
        <div class="row">
            <div class="col-md-8 mb-5">
                <img style="max-width:100%" src="@Url.Content(Model.ImageUrl)" />
            </div>
            <div class="col-md-4">
                <h3>O ovoj pici</h3>
                <div style="font-weight:400; padding-top:45px">
                    <p>
                        @Model.LongDescription
                    </p>
                </div>
                <div class="d-flex flex-row justify-content-between mt-4">
                    <div>
                        <h5>
                            <b>@Model.Price RSD</b>
                        </h5>
                    </div>
                    <div>
                        <button type="button" class="btn btn-success">Dodaj u korpu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>